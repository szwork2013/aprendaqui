.modal-header
	h3.modal-title Painel da Administração

.modal-body
	tabset(justified='true')
		tab(heading='Gerenciar Categorias')
			ng-include(src="'app/admin/admin.painel.gerenciar-categorias.html'")
		tab(heading='Gerenciar Subcategorias')
			ng-include(src="'app/admin/admin.painel.gerenciar-subcategorias.html'")
		tab(heading='Gerenciar Tutoriais')
			ng-include(src="'app/admin/admin.painel.gerenciar-tutoriais.html'")
		tab(heading='Gerenciar Denúncias')
			ng-include(src="'app/admin/admin.painel.gerenciar-denuncias.html'")

.modal-footer
	button.btn.btn-default.pull-left(type='button', ng-click='fechar()')
		span.fa.fa-remove
		|  Fechar