.modal-header
	h3.modal-title Painel de Controle

.modal-body
	tabset(justified='true')
		tab(heading='Alterar Senha', ng-if='!usuarioLogado.isSocial')
			ng-include(src="'app/painel/painel.controle.alterar-senha.html'")
		tab(heading='Alterar Foto', ng-if='!usuarioLogado.isSocial')
			ng-include(src="'app/painel/painel.controle.alterar-foto.html'")
		tab(heading='Meus Tutoriais')
			ng-include(src="'app/painel/painel.controle.meus-tutoriais.html'")
		tab(heading='Minhas Mensagens')
			ng-include(src="'app/painel/painel.controle.minhas-mensagens.html'")

.modal-footer
	button.btn.btn-default.pull-left(type='button', ng-click='fechar()')
		span.fa.fa-remove
		|  Fechar